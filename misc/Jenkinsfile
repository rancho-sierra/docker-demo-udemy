node {
   def commit_id
   stage('Preparation') {
     checkout scm
     sh "git rev-parse --short HEAD > .git/commit-id"                        
     commit_id = readFile('.git/commit-id').trim()
   }
   stage('test') {
     nodejs(nodeJSInstallationName: 'nodejs') {
       sh 'npm install --only=dev'
       sh 'npm test'
     }
   }
   stage('docker build/push') {
     docker.withRegistry('https://hub.docker.com/repositories/saavi21/', 'saavi21') {
       def app = docker.build("saavi21/docker_nodejs_demo1:${commit_id}", '.').push()
     }
   }
}
